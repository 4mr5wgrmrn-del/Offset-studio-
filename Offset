<script>
function show(id){
document.querySelectorAll("section").forEach(s=>s.classList.remove("active"));
document.getElementById(id).classList.add("active");
}
function order(item,price){
let rbx=prompt("Roblox username"); if(!rbx)return;
let dc=prompt("Discord username"); if(!dc)return;
let mail=prompt("Email address"); if(!mail)return;
alert("You are about to open your email to place the order.");
window.location=`mailto:zrakclothing@list.ru?subject=ORDER: ${item}&body=Item: ${item}%0APrice: ${price} Robux%0ARoblox: ${rbx}%0ADiscord: ${dc}%0AEmail: ${mail}`;
}
function countdown(){
let d=new Date("2025-01-01").getTime();
setInterval(()=>{
let n=new Date().getTime();
let t=d-n;
if(t<0)return;
let days=Math.floor(t/(1000*60*60*24));
document.getElementById("drop").innerText=days+" days until next drop";
},1000);
}
</script>
